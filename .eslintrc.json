{
    "extends": ["eslint-config-fluid", "plugin:react/recommended"],
    "globals": {
        "fluid": true
    },
    "env": {
        "browser": true,
        "amd": true,
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": ["error", "tab"],
        "strict": "off",
        "quotes": ["error", "single"]
    },
    "settings": {
        "react": {
            "version": "16"
        }
    },
    "overrides": [
        {
            "files": "rollup.config.js",
            "parserOptions": {
                "sourceType": "module"
            }
        },
        {
            "files": "src/assets/scripts/app.js",
            "parserOptions": {
                "sourceType": "module"
            }
        },
        {
            "files": "src/admin/util.js",
            "parserOptions": {
                "sourceType": "module"
            }
        }
    ]
}
