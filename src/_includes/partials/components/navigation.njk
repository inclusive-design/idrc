<nav class="nav" id="menu" aria-labelledby="menu-label">
    {% set navItems = collections.all | eleventyNavigation %}
    <button class="menu-toggle" id="menu-toggle" aria-expanded="false">menu</button>
    <div class="menu{{ ' --bg-' + headerBgColor if headerBgColor }}">
        <p class="menu-label" id="menu-label"><span class="sr-only">main </span>Menu</p>
        <ul>
        {%- for entry in navItems %}
	        {% set currentAttribute, relAttribute = '' %}
	        {% set currentPage = page.url === entry.url %}
	
	        {% if entry.rel %}
	          {% set relAttribute = ' rel="' + entry.rel + '"' %}
	        {% endif %}
	
	        {% if currentPage %}
	          {% set currentAttribute = ' aria-current="page"' %}
	        {% endif %}
        <li>
            <a{{ relAttribute | safe }}{{ currentAttribute | safe }} href="{{ entry.url | url }}">{{ entry.title }}</a>
        </li>
        {%- endfor %}
        </ul>
    </div>
</nav>
