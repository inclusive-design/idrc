
<header class="page-header" {% if locale !== 'en-CA' %} lang="en-CA" dir="ltr" {% endif %}>
    <div class="wrapper">
        {% set breadcrumbs = [] %}
        {% if eleventyNavigation.key and page.url != false and 'projects' not in page.url and 'projets' not in page.url %}
        {% set breadcrumbs = collections.all | eleventyNavigationBreadcrumb(eleventyNavigation.key) %}
        {% endif %}
        {% if breadcrumbs.length > 0 %}
        <p class="breadcrumbs">
        {% for breadcrumb in breadcrumbs %}
            {% if breadcrumb.url !== '#' %}
            <a href="{{ breadcrumb.url | url }}">{{ breadcrumb.key }}</a>
            {% else %}
            {{ breadcrumb.key }}
            {% endif %}
        {% endfor %}
        </p>
        {% endif %}
        <h1>{{ parentTitle if parentTitle else title }}</h1>
        {% if locale %}
            {% set localeToFind = 'en-CA' if locale === 'fr-CA' else 'fr-CA' %}
            {% set translatedItem = collections.all | eleventyNavigation(eleventyNavigation.parent) | findByKey(translationKey, localeToFind) | first %}
            {% if translatedItem %}
            <a href="{{ translatedItem.url }}" lang="{{ translatedItem.lang }}" hreflang="{{ translatedItem.lang }}">
            {%- include 'svg/icon-translation.svg' -%}<span>{{ 'Read in English' if translatedItem.lang === 'en-CA' else 'Lire en fran√ßais' }}</span>
            </a>
            {% endif %}
        {% endif %}
        {% if intro %}
        <div class="intro">{{ intro | renderContent("md") | safe }}</div>
        {% endif %}
    </div>
</header>
