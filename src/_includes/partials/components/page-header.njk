<header>
    <div class="wrapper">
        {% set breadcrumbs = [] %}
        {% if eleventyNavigation.key %}
        {% set breadcrumbs = collections.all | eleventyNavigationBreadcrumb(eleventyNavigation.key) %}
        {% endif %}
        {% if breadcrumbs.length > 0 %}
        <p class="breadcrumbs">
        {% for breadcrumb in breadcrumbs %}
            {% if breadcrumb.url !== '#' %}
            <a href="{{ breadcrumb.url | url }}">{{ breadcrumb.key }}</a>
            {% else %}
            {{ breadcrumb.key }}
            {% endif %}
        {% endfor %}
        </p>
        {% endif %}
        <h1>{{ title }}</h1>
        {% if intro %}
        <div class="intro">{{ intro | markdown | safe }}</div>
        {% endif %}
    </div>
</header>
