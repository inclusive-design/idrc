<footer role="contentinfo" class="mt-auto text-white bg-indigo-900">
    <div class="container px-6 py-20 mx-auto lg:flex lg:flex-row lg:flex-wrap">
        <div class="text-white lg:w-full">
            <a rel="home" href="/">
                {% include "svg/logo-wordmark.svg" %}
                <span class="sr-only">Inclusive Design Research Centre</span>
            </a>
        </div>
        <div class="mt-12 social lg:w-1/3 lg:pr-6">
            <p class="h3">Social media</p>
            <ul class="mt-6 list-none">
                <li class="mb-2"><a class="no-underline" rel="external" href="https://twitter.com/{{ site.twitter | replace('@', '') }}/">{% include 'svg/twitter.svg' %} <span class="underline">Twitter</span></a></li>
                <li class="mb-2"><a class="no-underline" rel="external" href="https://medium.com/{{ site.medium }}">{% include 'svg/medium.svg' %} <span class="underline">Medium</span></a></li>
                <li class="mb-2"><a class="no-underline" rel="external" href="{{ site.youtube }}">{% include 'svg/youtube.svg' %} <span class="underline">YouTube</span></a></li>
            </ul>
        </div>
        <div id="contact-us" class="mt-12 contact lg:w-2/3 lg:flex lg:flex-row lg:flex-wrap">
            <p class="h3 lg:w-full lg:mb-6">Contact us</p>
            <div class="lg:w-1/2 lg:mt-0">
                <p class="h4">Email</p>
                <p><a href="mailto:{{ site.email }}">{{ site.email }}</a></p>
                <p class="h4">Address</p>
                {{ site.address | markdownFilter | safe }}
            </div>
            <div class="lg:w-1/2">
                <p class="h4">Phone</p>
                <p>{{ site.phone }}</p>
                <p class="h4">Fax</p>
                <p>{{ site.fax }}</p>
            </div>
        </div>
        <div class="mt-12 license-credit">
            <p class="text-sm" >This work is licensed under a <a rel="external license" href="https://creativecommons.org/licenses/by/4.0/">Creative Commons Attribution 4.0 License</a>. Hosting provided by <a rel="external" href="https://netlify.com">Netlify</a>.</p>
        </div>
    </div>
</footer>
