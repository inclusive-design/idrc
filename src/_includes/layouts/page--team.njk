{% if previewMode %}
    {% extends 'layouts/preview.njk' %}
{% else %}
    {% extends 'layouts/base.njk' %}
{% endif %}

{% set pageType = 'page--team' %}

{% block content %}
    <article class="container">
        {% include 'partials/components/page-header.njk' %}
        <div class="content">
            <div class="wrapper">
                <div class="grid grid--people">
                {% for person in collections.people %}
                {% include 'partials/components/person-excerpt.njk' %}
                {% endfor %}
                </div>
            </div>
        </div>
        {% if secondaryNavigation %}
        {% include 'partials/components/secondary-navigation.njk' %}
        {% endif %}
    </article>
{% endblock %}
