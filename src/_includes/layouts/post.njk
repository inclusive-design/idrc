{% extends 'layouts/base.njk' %}

{% set pageType = 'post' %}

{% block content %}
    <article class="container">
        <header>
            <div class="container inner">
                <h1>{{ title }}</h1>
                <p class="metadata">
                    <time datetime="{{ date | w3DateFilter }}" class="dt-published">Published {{ date | dateFilter }}</time><br />
                    By {{ author if author else 'IDRC Team' }}
                </p>
            </div>
        </header>
        <div class="content">
            <div class="inner">
            {{ content | safe }}
            </div>
        </div>
    </article>
{% endblock %}

