{% extends 'layouts/base.njk' %}

{% block content %}
    <article class="container">
        <header>
            <div class="container inner">
                {% if postType %}
                <p class="post-type">{{ postType }}</p>
                {% endif %}
                <h1>{{ title }}</h1>
                <p class="metadata">
                    By {{ author if author else 'IDRC Team' }}
                    <span class="separator" aria-hidden="true"> &middot; </span>
                    <time datetime="{{ date | w3DateFilter }}" class="dt-published">{{ date | dateFilter }}</time>
                </p>
            </div>
        </header>
            {% if featuredImage %}
            <figure class="featured-image">
                <img src="{{ featuredImage }}" alt="{{ featuredImageAlt }}" />
            </figure>
            {% endif %}
        <div class="content">
            <div class="inner">
            {{ content | safe }}
            </div>
        </div>
    </article>
{% endblock %}

