{% extends 'layouts/base.njk' %}

{% set pageType = 'page--projects-and-tools' %}

{% block content %}
    <article class="container">
        <header class="header{{ ' header--bg-' + headerBgColor if headerBgColor }}{{ ' header--fg-' + headerTextColor if headerTextColor }}">
            <div class="container inner">
                <h1>{{ title }}</h1>
                {% if intro %}
                <div class="intro">{{ intro | markdownFilter | safe }}</div>
                {% endif %}
            </div>
        </header>
        <section id="projects" class="section section--full">
            <div class="container">
                <div class="section__content">
                    <span class="hr"></span>
                    <h2>Projects</h2>
                    <div class="projects">
                        {% for project in projects %}
                        <div class="project">
                            <h3>{{ project.name }}{{ " (" + project.shortName + ")" if project.shortName }}</h3>
                            {{ project.description | markdownFilter | safe }}
                            {% if project.tags %}
                            <p class="tags">
                                {% for tag in project.tags %}
                                <span class="tag">{{ tag | safe }}</span>
                                {% endfor %}
                            </p>
                            <p><a rel="external" href="{{ project.link }}">Visit {{ project.shortName if project.shortName else project.name }} website</a></p>
                            {% endif %}
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </section>
        <section id="tools" class="section section--full">
            <div class="container">
                <div class="section__content">
                    <span class="hr"></span>
                    <h2>Tools</h2>
                    <div class="tools">
                        {% for tool in tools %}
                        <div class="tool">
                            <h3>{{ tool.name }}{{ " (" + tool.shortName + ")" if tool.shortName }}</h3>
                            {{ tool.description | markdownFilter | safe }}
                            {% if tool.tags %}
                            <p class="tags">
                                {% for tag in tool.tags %}
                                <span class="tag">{{ tag | safe }}</span>
                                {% endfor %}
                            </p>
                            <p><a rel="external" href="{{ tool.link }}">Visit {{ tool.shortName if tool.shortName else tool.name }} website</a></p>
                            {% endif %}
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </section>
    </article>
{% endblock %}
