{% if previewMode %}
    {% extends 'layouts/preview.njk' %}
{% else %}
    {% extends 'layouts/base.njk' %}
{% endif %}

{% set pageType = 'page--projects-and-tools' %}

{% block content %}
    <article>
        {% include 'partials/components/page-header.njk' %}
        <section id="projects" class="section section--full">
            <div class="wrapper">
                <div class="section__content">
                    <span class="hr"></span>
                    <h2>Projects</h2>
                    <div class="projects">
                        {% for project in projects %}
                        <div class="project">
                            <h3>{{ project.name }}{{ " (" + project.shortName + ")" if project.shortName }}</h3>
                            {{ project.description | markdown | safe }}
                            {% if project.tags.length > 0 %}
                            <p class="tags">
                                {% for tag in project.tags %}
                                <span class="tag">{{ tag | safe }}</span>
                                {% endfor %}
                            </p>
                            {% endif %}
                            <p class="project__link"><a rel="external" href="{{ project.link }}">Visit {{ project.shortName if project.shortName else project.name }} website</a></p>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </section>
        <section id="tools" class="section section--full">
            <div class="wrapper">
                <div class="section__content">
                    <span class="hr"></span>
                    <h2>Tools</h2>
                    <div class="tools">
                        {% for tool in tools %}
                        <div class="tool">
                            <h3>{{ tool.name }}{{ " (" + tool.shortName + ")" if tool.shortName }}</h3>
                            {{ tool.description | markdown | safe }}
                            {% if tool.tags.length > 0 %}
                            <p class="tags">
                                {% for tag in tool.tags %}
                                <span class="tag">{{ tag | safe }}</span>
                                {% endfor %}
                            </p>
                            {% endif %}
                            <p class="tool__link"><a rel="external" href="{{ tool.link }}">Visit {{ tool.shortName if tool.shortName else tool.name }} website</a></p>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </section>
    </article>
{% endblock %}
