{
  "id": "backstop_default",
  "viewports": [
    {
      "label": "phone",
      "width": 320,
      "height": 480
    },
    {
      "label": "tablet",
      "width": 768,
      "height": 1024
    },
    {
      "label": "desktop",
      "width": 1024,
      "height": 768
    }
  ],
  "onBeforeScript": "puppet/onBefore.js",
  "onReadyScript": "puppet/onReady.js",
  "scenarios": [
    {
      "label": "IDRC / Home",
      "url": "http://localhost:3000/",
      "referenceUrl": "https://idrc.ocadu.ca/",
      "hideSelectors": [
        "#latest-news .section__content .entry"
      ]
    },
    {
      "label": "IDRC / News",
      "url": "http://localhost:3000/news/",
      "referenceUrl": "https://idrc.ocadu.ca/news/"
    },
    {
      "label": "IDRC / Ideas",
      "url": "http://localhost:3000/ideas/",
      "referenceUrl": "https://idrc.ocadu.ca/ideas/"
    },
    {
      "label": "IDRC / Projects and tools",
      "url": "http://localhost:3000/projects-and-tools/",
      "referenceUrl": "https://idrc.ocadu.ca/projects-and-tools/"
    },
    {
      "label": "IDRC / IDRC Consulting",
      "url": "http://localhost:3000/consulting/",
      "referenceUrl": "https://idrc.ocadu.ca/consulting/"
    },
    {
      "label": "IDRC / Vision Technology Service",
      "url": "http://localhost:3000/vision-technology-service/",
      "referenceUrl": "https://idrc.ocadu.ca/vision-technology-service/"
    }
  ],
  "paths": {
    "bitmaps_reference": "backstop_data/bitmaps_reference",
    "bitmaps_test": "backstop_data/bitmaps_test",
    "engine_scripts": "backstop_data/engine_scripts",
    "html_report": "backstop_data/html_report",
    "ci_report": "backstop_data/ci_report"
  },
  "report": ["browser"],
  "engine": "puppeteer",
  "engineOptions": {
    "args": ["--no-sandbox"]
  },
  "asyncCaptureLimit": 5,
  "asyncCompareLimit": 50,
  "debug": false,
  "debugWindow": false
}
